<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/viewHolder_tip_profile_picture"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_profile" />

            <TextView
                android:id="@+id/viewHolder_match_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewHolder_tip_profile_picture"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/viewHolder_tip_profile_picture"
                android:padding="4dp"
                android:text="Match Name"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewHolder_tip_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewHolder_match_name"
                android:layout_alignStart="@+id/viewHolder_match_name"
                android:padding="4dp"
                android:text="Israel Israeli"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewHolder_tip_dot_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewHolder_match_name"
                android:layout_toEndOf="@+id/viewHolder_tip_user_name"
                android:padding="4dp"
                android:text="â€¢"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewHolder_tip_time_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewHolder_match_name"
                android:layout_toEndOf="@+id/viewHolder_tip_dot_separator"
                android:padding="4dp"
                android:text="Sat 22:05"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewHolder_tip_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewHolder_tip_user_name"
                android:layout_alignStart="@+id/viewHolder_match_name"
                android:ellipsize="end"
                android:maxEms="15"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:padding="4dp"
                android:text="Tip Description"
                android:textSize="15sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/viewHolder_tip_description"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#ababab" />

            <TextView
                android:id="@+id/viewHolder_tip_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_alignStart="@+id/viewHolder_tip_description"
                android:padding="4dp"
                android:text="Tip Value"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/viewHolder_tip_team_winner_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_above="@+id/divider"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/draw" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
